rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return request.auth.uid == userId;
    }
    
    // User profile pictures
    match /users/{userId}/profile/{fileName} {
      // Users can read their own profile pictures, others can read if authenticated
      allow read: if isAuthenticated();
      
      // Users can upload/update their own profile pictures
      allow write: if isUser(userId) && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB max
                      request.resource.contentType.matches('image/.*');
    }
    
    // Organization logos and documents
    match /organizations/{orgId}/{allPaths=**} {
      // Authenticated users can read organization files
      allow read: if isAuthenticated();
      
      // Organization members can upload files
      allow write: if isAuthenticated() && 
                      request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Event images
    match /events/{eventId}/{fileName} {
      // Anyone authenticated can read event images
      allow read: if isAuthenticated();
      
      // Organization members can upload event images
      allow write: if isAuthenticated() && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB max
                      request.resource.contentType.matches('image/.*');
    }
    
    // Certificates
    match /certificates/{userId}/{certificateId}.pdf {
      // Anyone can read certificates (for public verification)
      allow read: if true;
      
      // Only system (cloud functions) can write certificates
      allow write: if false; // Certificates generated by Cloud Functions only
    }
    
    // Temporary uploads
    match /temp/{userId}/{fileName} {
      // Users can read their own temp files
      allow read: if isUser(userId);
      
      // Users can upload temp files
      allow write: if isUser(userId) && 
                      request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
  }
}
